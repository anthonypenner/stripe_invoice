%table(border=1)
  %tr
    %td Name
    %td value
  %tr
    %td Invoice Number
    %td= @invoice.number
  %tr
    %td Invoice Date
    %td= @invoice.period_start
  %tr
    %td Subtotal
    %td= format_currency(@invoice.subtotal, @invoice.currency)
  - if @invoice.discount
    %tr
      %td discount
      %td= format_currency(@invoice.discount, @invoice.currency)

  - @invoice.refunds[:data].each do |refund|
    %tr
      %td= 'Refund'
      %td= format_currency(refund[:amount], @invoice.currency)

  %tr
    %td Total
    %td= format_currency((@invoice.total - @invoice.total_refund), @invoice.currency)
